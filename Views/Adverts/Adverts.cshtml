@using LingonberryStudio.Data.Entities

<div id="popupForm"></div>
<a asp-controller="Adverts" asp-action="Form" class="btn adBtn" data-target="#formModal" data-toggle="modal">POST YOUR AD</a>


@model List<Advert>

<label>Total ads:</label>  @ViewBag.Total
@foreach (var ad in Model)
{
    <a data-toggle="modal" data-target="@("#adModal-"+ad.AdvertId)" >
        <div class="container row p-3">
            <div class="container col" style="border:solid;">
                    <img src="@ad.Image.ImgUrl" width="100%" />
            </div>
            <div class="container col" style="border:solid;">
                <h4>@ad.OfferingLooking</h4>
                I am : @ad.FirstName <br>
                workspace: @ad.WorkspaceDescription-studio<br>
                Postcode: @ad.PostCode<br>
                Budget: @ad.Budgets.Price £/ @ad.Budgets.MonthOrWeek<br>
              Mesurements foot: @ad.Measurements.Number square @ad.Measurements.FeetOrMeters @ad.TimeCreated<br>

            </div>
        </div>
    </a>
    @await Html.PartialAsync("_ChosenAdPartial", ad)
}