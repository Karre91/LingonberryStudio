@model LingonberryStudio.Models.gmail

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@if (ViewBag.Message != null)
{
	<script>
		$(document).ready(function () {

			alert('@ViewBag.Message');
		});
	</script>
}
@using (Html.BeginForm("Contact", "Contact", FormMethod.Post, new { @class = "frmValidation", @novalidate = "" }))
{
	<div class="container contact-form">
		<h3 class="mt-5">DROP US A MESSAGE</h3>
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<div class="form-group inputField">
						<input type="text" asp-for="Name" class="form-control" placeholder="Name" required />
						<span class="invalid-feedback">Please enter your name</span>
					</div>
					<input type="email" asp-for="From" class="form-control" placeholder="Email" required />
					<span class="invalid-feedback">Please enter your email</span>
				</div>	
				<div class="form-group">
					<input type="text" asp-for="Subject" class="form-control" placeholder="Subject" required />
					<span class="invalid-feedback">Please write a subject</span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<textarea class="form-control" asp-for="Body" style="width: 100%; height: 150px;" placeholder="Message" required></textarea>
					<span class="invalid-feedback">Please write a message</span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" name="btnSubmit" class="btnContact" value="SEND" />
			</div>
		</div>
	</div>
}
